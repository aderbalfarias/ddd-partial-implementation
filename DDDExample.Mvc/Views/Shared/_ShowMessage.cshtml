@using DDDExample.Mvc.Models.Shared
@{
    var message = (Message) TempData["ExibirMessagem"] ?? (Message) ViewBag.ExibirMessagem;
}

@if (message != null)
{
    <script type ="text/javascript">
        $(function () {
            ShowMessage('@message.Kind', '@message.Title', '@message.Detail');
        });
    </script>
}